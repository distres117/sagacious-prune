<% caller = locals[:caller] %>
<td class="col-md-2">
	<%= caller.name %>
</td>
<td class="col-md-2">
	<%=  caller.created_at.strftime("%m/%d/%Y") %>
</td>
<td class="col-md-2">
	<%=  caller.due.strftime("%m/%d/%Y") unless caller.due.nil? %>
</td>
<td class="col-md-2">
	<%=  caller.assign_type %>
</td>
<td align="center">
	<%= link_to [@course, caller], method: :delete, class: "btn btn-default btn-xs" do %>
		<span class="glyphicon glyphicon-trash" />
	<% end %>
</td>
<td align="center">
	<%= link_to notes_path(type: "Assignment", n_id: caller.id, c_id: @course.id), remote: true, data: {toggle: "modal", target: "#myModal" }, class: "btn btn-primary btn-sm" do %>
		<span class="glyphicon glyphicon-search"></span>
		<span class="badge"><%= caller.notes.count %></span>
	<% end %>
</td>